{% extends "base.twig" %}

{% block content %}
    {% if flash %}
        <p class="alert alert-{{ flash.type }}">{{ flash.message|raw }}</p>
    {% endif %}
    {% if post %}
        <h1>Update Post</h1>
        <form action="/forum/update/{{ post.id }}" method="post">
            <input type="hidden" name="csrf-token" value="{{ csrf_token }}">
            <div>
                <textarea name="content" rows="20" cols="80">{{ form_input ? form_input.content|e : post.content|e }}</textarea>
            </div>
            <div>
                <button type="submit">Update Post</button>
            </div>
        </form>
    {% endif %}
{% endblock %}
