{% extends "base.twig" %}

{% block content %}
    {% if flash %}
        <p class="alert alert-{{ flash.type }}">{{ flash.message|raw }}</p>
    {% endif %}
    {% if user %}
        <p><a href="/wiki/create" class="article-button">Create Article</a></p>
        <hr>
    {% endif %}
    <h1>Index of Articles</h1>
    {% if articles|length > 0 %}
        <form action="/wiki/search" method="post">
            <label for="input-search">Search </label>
            <input type="text" name="search-term" id="input-search">
            <button type="submit">Go</button>
        </form>
        <ul>
        {% for article in articles %}
            <li><a href="/wiki/article/{{ article.slug|e }}">{{ article.title|e }}</a></li>
        {% endfor %}
        </ul>
    {% else %}
        <p>No wiki articles found.</p>
    {% endif %}
{% endblock %}
